{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Dance events, competitions, and performances"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 300
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "location": {
      "type": "string",
      "maxLength": 200
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "eventType": {
      "type": "enumeration",
      "enum": ["competition", "performance", "workshop", "recital", "masterclass", "other"],
      "default": "other"
    },
    "price": {
      "type": "decimal"
    },
    "registrationUrl": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
