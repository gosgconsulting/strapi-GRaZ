{
  "collectionName": "components_shared_buttons",
  "info": {
    "displayName": "Button",
    "description": "Reusable button component"
  },
  "options": {},
  "attributes": {
    "text": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "url": {
      "type": "string",
      "maxLength": 500
    },
    "variant": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "outline", "ghost"],
      "default": "primary"
    },
    "size": {
      "type": "enumeration",
      "enum": ["sm", "md", "lg"],
      "default": "md"
    },
    "openInNewTab": {
      "type": "boolean",
      "default": false
    }
  }
}
